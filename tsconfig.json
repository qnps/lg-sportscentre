{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "outDir": "dist",
        "allowJs": true,
        "lib": [
            "es6",
            "es2017",
            "es2018.promise"
        ],
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/types"
    ]
}